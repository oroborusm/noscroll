            position absolute
            transform translate(-50%, -50%)
            width 80%
        h3
          color #999999
          font-family 'geometos'
          font-size 18px
          font-weight 600
          margin 0
          text-transform uppercase
          transform translateY(30px)
          transition .75s
          -webkit-font-smoothing initial
        .paddingTopTittle
          color white !important
          padding-top 20px
        p
          //color #4d4d4d
          color white
          //display none
          font-size 13px
          margin 10px auto 0
          opacity 0
          text-align center
          transition .75s linear
          transform translateY(-50px)
          visibility hidden
        &:hover
          //background #a51fc1
          background #a51fc1
          //border 4px solid #a51fc1
          .rodImg
            //border 4px solid #a51fc1
            height 130px
            transform translateY(-60px)
            width 130px
          .svg
            border 4px solid #a51fc1
            height 80px
            transform translateY(-60px)
            width 80px
          h3
            color white
            font-size 16px
            text-shadow 2px 2px 4px rgba(black, .3)
            transform translateY(-60px)
            -webkit-font-smoothing antialiased
          p
            //display block
            opacity 1
            visibility visible
